{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*", "src/@types/*"]
    },
    "typeRoots": ["src/@types", "node_modules/@types"]
  }
}
